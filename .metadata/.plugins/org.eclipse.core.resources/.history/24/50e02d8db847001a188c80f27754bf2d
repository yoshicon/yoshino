package GUItes;

import java.awt.*;
import java.awt.event.*;
import java.awt.image.*;
import java.io.*;

import javax.swing.*;
import javax.imageio.ImageIO;

public class Bgtes extends JFrame implements ActionListener {
	BufferedImage img = null;
	
	JButton bt1 = new JButton("<=");
	JButton bt2 = new JButton("=>");
	JButton bt3 = new JButton("엘산나");
	
	public Bgtes() {
		setTitle("엘산나");
		String elsa = "D:\\dev\\test\\src\\GUItes\\elsa.png";
		String anna = "D:\\dev\\test\\src\\GUItes\\anna.png";
		
		// 728 * 455
		JLayeredPane lap = new JLayeredPane();
		lap.setSize(225, 225);
		lap.setLayout(null);
		
		try {
			img = ImageIO.read(new File(elsa));
		} catch (IOException e) {
			JOptionPane.showMessageDialog(null, "커여운 바넬쟝을 못본다는...");
			System.exit(0);
		}
		
		mypan pan = new mypan();
		pan.setSize(225, 225);
		lap.add(pan);
		
		setLayout(null);
		add(lap);
		
		setBounds(0,0,728,455);
		setVisible(false);
		setResizable(false);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
	}

	
	class mypan extends JPanel{
		public void paint(Graphics g) {
			g.drawImage(img, 0, 0, null);			
		}	
	}
	
	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		
	}
	
	
	public static void main(String[] args) {
		new Bgtes();

	}

}
